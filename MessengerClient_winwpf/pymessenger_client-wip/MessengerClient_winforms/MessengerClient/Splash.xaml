             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MessengerClient"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Foreground="Black" FontWeight="Normal" FontStyle="Normal" FontFamily="Modern No. 20" FontSize="14" Loaded="UserControl_Loaded" PreviewKeyDown="userControl_PreviewKeyDown" Cursor="Wait" UseLayoutRounding="True" PreviewMouseLeftButtonDown="userControl_PreviewMouseLeftButtonDown">
    <UserControl.Resources>
